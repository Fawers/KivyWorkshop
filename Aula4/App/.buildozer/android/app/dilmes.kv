<SplashScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 60
            size_hint_y: 0.2
            text: 'Dilmês Ipsum!'
        Label:
            text: 'Inspirado em www.dilmesipsum.com.br'
            size_hint_y: 0.1
        Image:
            source: 'img/pt.png'
        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: 'Sair'
                on_press: exit()
            Button:
                text: 'Gerar Ipsums'
                on_press: root.goto_screen(1)


<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        AsyncImage:
            source: 'img/dilmes.png'
            size_hint_y: 2
        Label:
            text: 'Quantos parágrafos você deseja?'
            size_hint_y: 0.1
        BoxLayout:
            size_hint_y: 0.5
            Button:
                text: '1'
                on_press: root.show_text(1)
            Button:
                text: '2'
                on_press: root.show_text(2)
            Button:
                text: '3'
                on_press: root.show_text(3)
            Button:
                text: '4'
                on_press: root.show_text(4)
            Button:
                text: '5'
                on_press: root.show_text(5)
            Button:
                text: '6'
                on_press: root.show_text(6)
            Button:
                text: '7'
                on_press: root.show_text(7)
            Button:
                text: '8'
                on_press: root.show_text(8)
        Button:
            text: 'Voltar'
            size_hint_y: 0.5
            on_press: root.goto_screen(0)


<TextScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: txt
            #size_hint_y: 0.9
            readonly: True
        Button:
            text: 'Voltar'
            size_hint_y: 0.1
            on_press: root.goto_screen(1)
