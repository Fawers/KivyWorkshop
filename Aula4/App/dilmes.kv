<Root>: # declaração do tipo Root
Root:
    scroll_timeout: 100
    min_move: .1
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 60
            size_hint_y: 0.2
            text: 'Dilmês Ipsum!'
        Label:
            text: 'Inspirado em www.dilmesipsum.com.br'
            size_hint_y: 0.1
        BoxLayout:
            Image:
                source: 'img/pt.png'
                size_hint_x: 0.5
            Image:
                source: 'img/dilmes.png'
        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: 'Sair'
                on_press: exit()
            Button:
                text: 'Gerar Ipsums'
                on_press: root.load_next()

    BoxLayout:
        orientation: 'vertical'
        AsyncImage:
            source: 'img/dilmes.png'
            size_hint_y: 2
        Label:
            text: 'Quantos parágrafos você deseja?'
            size_hint_y: 0.1
        BoxLayout:
            size_hint_y: 0.325
            Button:
                text: '1'
                on_press: root.show_text(1)
            Button:
                text: '2'
                on_press: root.show_text(2)
            Button:
                text: '3'
                on_press: root.show_text(3)
            Button:
                text: '4'
                on_press: root.show_text(4)
            Button:
                text: '5'
                on_press: root.show_text(5)
            Button:
                text: '6'
                on_press: root.show_text(6)
            Button:
                text: '7'
                on_press: root.show_text(7)
            Button:
                text: '8'
                on_press: root.show_text(8)

    ScrollView:
        Label:
            id: target_txt
            multiline: True
            text_size: (self.width, None)
            size_hint_y: None
            height: self.texture_size[1]
